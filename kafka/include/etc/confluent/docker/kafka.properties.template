{{- end -}}

{{- $confluentSupportProps := envToProps "CONFLUENT_SUPPORT_" "confluent.support." nil nil nil -}}
{{- range $name, $value := $confluentSupportProps -}}
{{$name}}={{$value}}
{{- end -}}
