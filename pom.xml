<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.confluent</groupId>
        <artifactId>common</artifactId>
        <version>4.1.0-SNAPSHOT</version>
    </parent>

    <groupId>io.confluent.docker</groupId>
    <artifactId>kafka-images-parent</artifactId>
    <packaging>pom</packaging>

    <name>${project.artifactId}</name>
    <description>Build files for Confluent's Apache Kafka Docker images</description>

    <modules>
        <module>cp-kafkacat</module>
        <module>cp-kerberos</module>
        <module>cp-jmxterm</module>
        <module>cp-zookeeper</module>
        <module>cp-kafka</module>
        <module>cp-enterprise-kafka</module>
        <module>kafka-integration</module>
    </modules>

    <properties>
        <packaging.build.branch>branch-not-set</packaging.build.branch>  <!-- This must be provided! -->
        <packaging.build.number>0</packaging.build.number>  <!-- This must be provided! -->

        <docker.tag>${packaging.build.branch}-${packaging.build.number}</docker.tag>  <!-- Tag for this build -->
        <docker.upstream-tag>${packaging.build.branch}-latest</docker.upstream-tag>  <!-- Tag for base images -->

        <packaging.repo>https://s3-us-west-2.amazonaws.com/jenkins-confluent-packages/${packaging.build.branch}/${packaging.build.number}</packaging.repo>
    </properties>

    <dependencies>
        <!-- Need this or TestNG breaks the build for modules without tests -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Every child project uses slf4j/log4j for logging, might as well just include them here automatically -->
        <!-- TODO: Remove after getting this dependency into common -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <!-- Send Kafka packaging metadata to the build. -->
            <id>docker</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>dockerfile-maven-plugin</artifactId>
                        <version>${dockerfile-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>package</id>
                                <configuration combine.self="append">
                                    <buildArgs>
                                        <CONFLUENT_PACKAGES_REPO>${packaging.repo}</CONFLUENT_PACKAGES_REPO>
                                    </buildArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
